
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 mx-auto mt-5">
            <div class="card shadow">
                <div class="card-header">
                    <h4>Register User</h4>
                </div>
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Well done!</strong> You successfully read <a href="#" class="alert-link">this important alert message</a>.
                </div>
                <div class="card-body">
                    <form action="#">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Fullname</label>
                                    <input class="form-control col" type="text" name="fullname" id="fullname" value="" placeholder="Enter fullname" required />
                                </div>
                                <div class="form-group">
                                    <label>Contact</label>
                                    <input class="form-control col" type="text" name="contact" id="contact" value="" placeholder="Enter contact" required />
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control col" type="email" name="email" id="email" value="" placeholder="Enter email" required />
                                </div>
                                <div class="form-group">
                                    <label>Username</label>
                                    <input class="form-control col" type="text" name="username" id="password" value="" placeholder="Enter username" required />
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input class="form-control col" type="password" name="password" id="password" value="" placeholder="Enter password" required />
                                </div>
                                <div class="form-group">
                                    <label>Confirm Password</label>
                                    <input class="form-control col" type="password" name="password" id="password" value="" placeholder="Enter confirm password" required />
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="text-center mb-3">
                                    <div class="row">
                                        <div class="col-10 mx-auto">
                                            <div class="card">
                                                <div class="card-body">
                                                    <img src="@TempData["RegisterImage"]" class="rounded mb-2 h-75 w-75" alt="...">
                                                </div>
                                                <div class="card-footer">
                                                    <div class="text-center">
                                                        <input type="file" class="col-lg-12" id="uploadimg" name="uploadimg" value="" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group text-center">
                                    <input type="submit" class="btn btn-success col-10" name="submit" id="btnSubmit" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="clearfix">
                        <a class="btn-link float-sm float-lg-right" href="@Url.Action("Login","Auth")">Back to Sign-in</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>