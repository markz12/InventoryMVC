
@{
    ViewBag.Title = "Category";
}
<div class="container mt-5">
    <div class="row">
        <div class="col mx-auto">
            <div class="card shadow">
                <div class="card-header">
                    <h4>Category</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4 mt-2">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Add Category</h5>
                                </div>
                                <div class="alert alert-dismissible alert-success">
                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                    <strong>Well done!</strong> You successfully read <a href="#" class="alert-link">this important alert message</a>.
                                </div>
                                <div class="card-body">
                                    <form>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <input class="form-control col" type="text" name="category" id="category" value="" placeholder="Enter category" required />
                                                <div class="input-group-append">
                                                    <input class="btn btn-success px-lg-2" type="submit" />
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8 mt-2">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Category Details</h5>
                                </div>
                                <div class="card-body">
                                    <table id="myCategoryTable" name="myBrandTable" class="table table-hover table-responsive">
                                        <thead>
                                            <tr class="text-center">
                                                <th scope="col" class="px-lg-2">Select</th>
                                                <th scope="col" class="px-lg-2">Category</th>
                                                <th scope="col" class="px-lg-2">Status</th>
                                                <th scope="col" class="px-lg-2">Created By</th>
                                                <th scope="col" class="px-lg-2">Update By</th>
                                                <th scope="col" class="px-lg-2">Date Created</th>
                                                <th scope="col" class="px-lg-2">Date Updated</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="table-light">
                                                <td>
                                                    <button class="btn btn-info btn-sm">Select</button>
                                                </td>
                                                <td>
                                                    Nestlie
                                                </td>
                                                <td>
                                                    Active
                                                </td>
                                                <td>
                                                    markVanz
                                                </td>
                                                <td>
                                                    Nestlie
                                                </td>
                                                <td>
                                                    09-10-2021
                                                </td>
                                                <td>
                                                    09-10-2021
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#myCategoryTable').DataTable();
    });
</script>