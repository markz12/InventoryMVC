
@{
    ViewBag.Title = "AddProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-5">
    <div class="row">
        <div class="col mx-auto">
            <div class="card shadow h-100 w-100">
                <div class="row">
                    <div class="col-lg-12 ">
                        <div class="card">

                            <div class="card-header">
                                <h4>Add Products</h4>
                            </div>
                            <div class="alert alert-dismissible alert-success">
                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                <strong>Well done!</strong> You successfully read <a href="#" class="alert-link">this important alert message</a>.
                            </div>
                            <div class="card-body">
                                <form>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label>Barcode</label>
                                                <div class="input-group">
                                                    <input class="form-control col" type="text" name="fullname" id="fullname" value="" placeholder="xxxxx-xxxxx-xxxxx" required />
                                                    <div class="input-group-append">
                                                        <button class="btn btn-outline-info px-lg-5" type="button"><i class="fa fa-search"></i></button>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="category">Category</label>
                                                <select class="form-control col" id="category">
                                                    <option>Can Goods</option>
                                                    <option>Fruits</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label for="category">Brand</label>
                                                <select class="form-control col" id="brands">
                                                    <option>Nestlie</option>
                                                    <option>Coca-cola</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Product Name</label>
                                                <input class="form-control col" type="text" name="fullname" id="fullname" value="" placeholder="Enter Product Name" required />
                                            </div>
                                            <div class="form-group">
                                                <label for="prodDescription">Description</label>
                                                <textarea class="form-control col" id="prodDescription" rows="3"></textarea>
                                            </div>
                                            <div class="d-lg-flex">
                                                <div class="form-group">
                                                    <label class="control-label">Price</label>
                                                    <div class="form-group">
                                                        <div class="input-group mb-3">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">Php</span>
                                                            </div>
                                                            <input type="text" class="form-control col text-center" placeholder="0.00" aria-label="Product Amount">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group ml-2">
                                                    <label class="control-label">Quantity</label>
                                                    <div class="form-group">
                                                        <div class="input-group mb-3">
                                                            <div class="input-group-prepend">
                                                                <button class="btn btn-outline-primary text-center px-lg-4" type="button"><i class="fa fa-plus"></i></button>
                                                            </div>
                                                            <input type="text" class="form-control col text-center" placeholder="0" required aria-label="Product Amount">
                                                            <div class="input-group-append">
                                                                <button class="btn btn-outline-primary text-center px-lg-4" type="button"><i class="fa fa-minus"></i></button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="text-center mb-3">
                                                <div class="row">
                                                    <div class="col-10 mx-auto">
                                                        <div class="card">
                                                            <div class="card-body">
                                                                <img src="@TempData["RegisterImage"]" class="rounded mb-2 h-75 w-75" alt="...">
                                                            </div>
                                                            <div class="card-footer">
                                                                <div class="text-center">
                                                                    <input type="file" class="col-lg-12" id="uploadimg" name="uploadimg" value="" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group text-center">
                                                <input type="submit" class="btn btn-success col-10" name="submit" id="btnSubmit" />
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>